<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskTrak</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @*<link rel="stylesheet" href="~/TaskTrak.PL.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
        <nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <img class="navimg" href="#" src="/Assets/HeaderLogo.png" />
                <div class="collapse navbar-collapse justify-content-center" id="navbarCenteredExample">

                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" aria-current="page" href="#">HOME</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tasks" asp-action="Tasks">TASKS</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item  ml-auto">
                            <a class="nav-link text-dark" onclick="logout()">LOGOUT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TaskTrak - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="~/js/autoLogout.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    function logout()
    {
        // Remove the token and expiration from localStorage
        localStorage.removeItem("token");
        localStorage.removeItem("expiration");

        // Redirect to the login page
        window.location.href = "/Login/Login";
    }
</script>