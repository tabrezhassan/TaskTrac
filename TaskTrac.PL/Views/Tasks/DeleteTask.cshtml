@model TaskTrac.DAL.Models.Tasks

@{
    ViewData["Title"] = "Delete Task";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Task</title>
</head>
    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                <a class="btn btn-outline-danger btn-sm delete-task" data-task-id="${task.id}">
                    <i class="fas fa-trash-alt"></i>Delete
                </a>
                    <div class="toast" id="confirmDeleteToast" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header">
                            <strong class="mr-auto">Confirm Delete</strong>
                            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="toast-body">
                            Are you sure you want to delete this task?
                            <button type="button" class="btn btn-success ml-2 confirm-delete">Yes</button>
                            <button type="button" class="btn btn-danger ml-2 cancel-delete" data-dismiss="toast">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

<script src ="~/js/deleteTask.js"></script>
